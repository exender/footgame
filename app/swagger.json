{
    "swagger": "2.0",
    "info": {
        "description": "Documentation Swagger pour le projet",
        "version": "1.0.0",
        "title": "API du projet"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Endpoint pour se connecter",
                "description": "Endpoint pour se connecter à l'API",
                "parameters": [
                    {
                        "name": "email",
                        "in": "formData",
                        "description": "Adresse email de l'utilisateur",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "Mot de passe de l'utilisateur",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Connexion réussie",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "token": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Email ou mot de passe incorrect"
                    }
                }
            }
        },
        "/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Endpoint pour récupérer tous les utilisateurs",
                "description": "Endpoint pour récupérer tous les utilisateurs de l'API",
                "responses": {
                    "200": {
                        "description": "Liste des utilisateurs",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/User"
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Endpoint pour créer un utilisateur",
                "description": "Endpoint pour créer un utilisateur dans l'API",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "Objet utilisateur à créer",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Utilisateur créé avec succès",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    }
}
